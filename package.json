{
  "name": "@kilic/html-cv-3",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "author": {
    "name": "Cenk Kilic",
    "email": "cenk@kilic.dev",
    "url": "https://cenk.kilic.dev"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev:start": "vite dev --host 0.0.0.0 --port 4200",
    "build": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && vite build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "preview": "vite preview --host 0.0.0.0 --port 4200",
    "format": "prettier --log-level warn --write src/ && pnpm run lint --fix",
    "lint": "eslint"
  },
  "simple-git-hooks": {
    "pre-commit": "[ -n \"$SKIP_GIT_HOOKS\" ] && true || pnpm exec lint-staged",
    "prepare-commit-msg": "[ -t 1 ] && exec < /dev/tty && git cz --hook || true"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx,cjs,svelte,spec.ts}": [
      "prettier --loglevel warn --write",
      "eslint --fix"
    ],
    "*.{svelte,html,css,json,md}": [
      "prettier --loglevel warn --write"
    ]
  },
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "^3.1.52",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@neoconfetti/svelte": "^2.2.2",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.22.5",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@types/cookie": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-svelte": "^3.10.1",
    "lint-staged": "^16.1.2",
    "mdsvex": "^0.12.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "simple-git-hooks": "^2.13.0",
    "svelte": "^5.35.6",
    "svelte-check": "^4.2.2",
    "svelte-eslint-parser": "^1.2.0",
    "svelte-fa": "^4.0.4",
    "tailwindcss": "^4.1.11",
    "theme-colors": "^0.1.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.4"
  }
}
